
@{
    ViewData["Title"] = "Facturacion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Estilos{
    <!-- ============================================================
    =ESTILOS PARA ESTA PAGINA
    ===============================================================-->
    <link href="~/vendor/select2/select2.min.css" rel="stylesheet">
    <style>
        .select2{
            width: 100% !important;
        }
        
    </style>
}

<!-- Begin Page Content -->
<div class="container-fluid">
    <div class = "mostrar">
    <div class="row">
        <div class="col-sm-12">

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white">Datos de la Factura</h6>
                        </div>
                        <div class="card-body">
                            
                            <div class="row">

                                <div class="form-group col-sm-6">

                                    <label for="FormaPago">Forma de pago</label>
                                    <select class="form-control" id="FormaPago" >
                                        <option value="01">Efectivo</option>
                                        <option value="02">Cheque nominativo</option>
                                        <option value="03">Transferencia electrónica de fondos</option>
                                        <option value="04">Tarjeta de crédito</option>
                                        <option value="05">Monedero electrónico</option>
                                        <option value="06">Dinero electrónico</option>
                                        <option value="08">Vales de despensa</option>
                                        <option value="12">Dación en pago</option>
                                        <option value="13">Pago por subrogación</option>
                                        <option value="14">Pago por consignación</option>
                                        <option value="15">Condonación</option>
                                        <option value="17">Compensación</option>
                                        <option value="23">Novación</option>
                                        <option value="24">Confusión</option>
                                        <option value="25">Remisión de deuda</option>
                                        <option value="26">Prescripción o caducidad</option>
                                        <option value="27">A satisfacción del acreedor</option>
                                        <option value="28">Tarjeta de débito</option>
                                        <option value="29">Tarjeta de servicios</option>
                                        <option value="30">Aplicación de anticipos</option>
                                        <option value="31">Intermediario pagos</option>
                                        <option value="99">Por definir</option>
                                    </select>
                                </div>
                               
                                <div class="form-group col-sm-6">

                                    <label for="tipoComprobante">Tipo de comprobante</label>
                                    <select class="form-control form-control-sm" id="tipoComprobante">
                                        <option value="I">Ingreso</option>
                                        <option value="E">Egreso</option>
                                        <option value="T">Traslado</option>
                                        <option value="N">Nómina</option>
                                        <option value="P">Pago</option>
                                    </select>
                                    
                                </div>
                                <div class="form-group col-sm-6">

                                    <label for="moneda">Moneda</label>

                                    <input type="text" value="MXN" class="form-control form-control-sm" aria-label="Small" aria-describedby="inputGroupSubTotal" id="moneda" disabled>
                                </div>

                                <div class="form-group col-sm-6">

                                    <label for="tipoCambio">Tipo de cambio</label>

                                    <input type="text" value="1.0" class="form-control form-control-sm" aria-label="Small" aria-describedby="inputGroupSubTotal" id="tipoCambio" disabled>
                                </div>
                               
                            </div>
                        </div>

                    </div>
                </div>
            </div>




            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white">Cliente</h6>
                        </div>
                        <div class="card-body" id="venta">
                            <div class="form-row">
                                <div class="form-group col-sm-12">
                                    <select class="form-control form-control-sm" id="txtNombreCliente">
                                        <option value=""></option>
                                    </select>
                                </div>
                            </div>
                            <div class="row">
                               
                                    <div class="form-group col-sm-6">
                                        
                                            <label  for = "nombre">Nombre</label>
                                       
                                        <input type="text" class="form-control form-control-sm" aria-label="Small" aria-describedby="inputGroupSubTotal" id="nombre" disabled>
                                    </div>
                                    <div class="form-group col-sm-6">

                                        <label for="rfc">RFC</label>

                                        <input type="text" class="form-control form-control-sm" aria-label="Small" aria-describedby="inputGroupSubTotal" id="rfc" disabled>
                                    </div>

                                <div class="form-group col-sm-6">

                                    <label for="regimen">Regimen Fiscal</label>

                                    <input type="text" class="form-control form-control-sm" aria-label="Small" aria-describedby="inputGroupSubTotal" id="regimen" disabled>
                                </div>
                                <div class="form-group col-sm-6">

                                    <label for="codigoPostal">CodigoPostal</label>

                                    <input type="text" class="form-control form-control-sm" aria-label="Small" aria-describedby="inputGroupSubTotal" id="codigoPostal" disabled>
                                </div>
                                </div>
                            </div>
                        
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white">Historial de Venta</h6>
                        </div>
                        <div class="card-body">
                            <div class="form-row align-items-end">
                                <div class="form-group col-sm-4">
                                    <label for="cboBuscarPor">Buscar por</label>
                                    <select class="form-control form-control-sm" id="cboBuscarPor">

                                        <option value="numero">Numero Venta</option>
                                    </select>
                                </div>

                                <div class="form-group col-sm-4 busqueda-venta">
                                    <label for="txtNumeroVenta">Numero Venta</label>
                                    <input type="text" class="form-control form-control-sm" id="txtNumeroVenta">
                                </div>
                                <div class="form-group col-sm-4">
                                    <button class="btn btn-success btn-block btn-sm" type="button" id="btnBuscar"><i class="fas fa-search"></i> Buscar</button>
                                </div>
                                <hr />
                </div>
                </div>
               
                
               
                                <div class="row">
                                    <div class="col-sm-12">
                                        <div class="table-responsive">
                                            <table id="tbProductos" class="table table-striped">
                                                <thead>
                                                    <tr>
                                                        <th>Producto</th>
                                                        <th>Cantidad</th>
                                                        
                                                        <th>Precio</th>
                                                <th>Descuento</th>
                                                        <th>Total</th>
                                                    </tr>
                                                </thead>
                                                <tbody>
                                                    <!-- Contenido de la tabla -->
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </div>

                </div>



            </div>

    <div id="mensaje"></div>
        

            <div class="row">
                <div class="col-sm-12">
                    <div class="card shadow mb-4">
                        <div class="card-header py-3 bg-second-primary">
                            <h6 class="m-0 font-weight-bold text-white">Detalle</h6>
                        </div>
                        <div class="card-body">
                           
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupSubTotalAD">Sub Total - AD</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupSubTotal" id="txtSubTotalAD" disabled>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupDescuento">Descuento</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupSubTotal" id="txtDescuento" disabled>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupSubTotal">Sub Total</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupSubTotal" id="txtSubTotal" disabled>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupIGV">IGV(18%)</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupIGV" id="txtIGV" disabled>
                            </div>
                            <div class="input-group input-group-sm mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" id="inputGroupTotal">Total</span>
                                </div>
                                <input type="text" class="form-control text-right" aria-label="Small" aria-describedby="inputGroupTotal" id="txtTotal" disabled>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
    <div class="row">
        <div class="col-sm-12">
            <div class="card shadow">
                <div class="card-body">
                    <div class="form-group mb-0">
                        <button class="btn btn-success btn-sm btn-block" id="btnTerminarVenta">Terminar Factura</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
        <div/>
            </div>

           

<!-- /.container-fluid -->

@section Scripts{
    <!-- ============================================================
    =SCRIPTS PARA ESTA PAGINA
    ===============================================================-->
    <script src="~/vendor/select2/select2.min.js"></script>
    <script src="~/vendor/select2/es.min.js"></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.5/FileSaver.min.js"></script>
    <script src="~/js/vistas/Factura.js"></script>
                
}

